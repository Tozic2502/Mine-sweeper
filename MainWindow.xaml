<Window x:Class="Mine_sweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mine_sweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="879">
    <Grid x:Name="Main">
        <StackPanel x:Name="StartMenu">
            <TextBox HorizontalAlignment="Center" Margin="0,20,0,80" TextWrapping="Wrap" Text="MineSweeper" VerticalAlignment="Top" Width="188" Height="47" FontSize="24" FontWeight="Bold" FontFamily="Broadway"/>
            <Button x:Name="Easy" Content="Easy"  Click="Easy_Click" Height="70" Width="100"/>
            <Button x:Name="Normal" Content="Normal" Height="70" Width="100" Click="Normal_Click"/>
            <Button x:Name="Hard" Content="Hard" Height="70" Width="100" Click="Hard_Click"/>
        </StackPanel>
        <DockPanel x:Name="GamePanel" Visibility="Collapsed">
            <TextBlock x:Name="TimerText" FontSize="20" DockPanel.Dock="Top" Margin="10" Text="Time: 0s"/>
            <UniformGrid x:Name="GameGrid"/>
        </DockPanel>
    </Grid>
</Window>
